{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "azi",
	"patterns": [
		{
			"include": "#number"
		},
		{
			"include": "#sign"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#order"
		},
		{
			"include": "#begin"
		},
		{
			"include": "#end"
		}
	],
	"repository": {
		"sign": {
			"patterns": [{
				"name": "constant.language.azi",
				"match": "\\b[a-z]([a-z]|[A-Z]|[0-9])*\\b"
			}]
		},
		"order": {
			"patterns": [{
				"name": "keyword.control.azi",
				"match": "((^`)||(\\s`))([a-z]([a-z]|[A-Z]|[0-9])*)\\b"
			}]
		},
		"number":{
			"patterns": [{
				"name": "entity.other.attribute-name.azi",
				"match": "\\b[0-9]+\\b"
			}]	
		},
		"begin": {
			"patterns": [{
				"name": "entity.azi",
				"match": "\\["
			}]
		},
		
		"end": {
			"patterns": [{
				"name": "entity.azi",
				"match": "\\]"
			}]
		},
		"strings": {
			"name": "string.quoted.double.azi",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.azi",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "azi"
}